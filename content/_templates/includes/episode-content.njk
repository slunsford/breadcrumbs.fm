<article class="episode">
    <header class="episode-header">
        <h1 class="episode-title"><span class="episode-number">{{ episodeNumber }}</span> {{ title }}</h1>
        <section class="episode-meta">
            <time class="episode-date" datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
            â€¢
            <span class="episode-duration">{{ duration }}</span>
        </section>
    </header>
    <p class="episode-summary">
        {{ summary | safe }}
    </p>
    <audio controls>
        <source src="{{ op3link }}" type="audio/mpeg">
    </audio>
    <section class="episode-content">
        <h2>Links and Show Notes</h2>
        {{ content | safe }}
    </section>
</article>
