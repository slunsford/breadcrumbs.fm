<!doctype html>
<html lang="{{ podcast.language }}">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% if title %}{{ title }} |&nbsp;{% endif %}{{ podcast.title }}</title>
        <meta name="description" content="{{ description or podcast.description }}">

        <link rel="alternate" href="/feed.xml" type="application/rss+xml" title="{{ podcast.title }} RSS">
        
        {# Favicons/Apple touch icons #}
        <link rel="shortcut icon" href="assets/img/favicons/favicon.ico" />
        <link rel="icon" type="image/x-icon" sizes="16x16 32x32" href="assets/img/favicons/favicon.ico">
        <link rel="apple-touch-icon" sizes="57x57" href="assets/img/favicons/favicon-57x57.png">
        <link rel="apple-touch-icon" sizes="72x72" href="assets/img/favicons/favicon-72x72.png">
        <link rel="apple-touch-icon" sizes="114x114" href="assets/img/favicons/favicon-114x114.png">
        <link rel="apple-touch-icon" sizes="120x120" href="assets/img/favicons/favicon-120x120.png">
        <link rel="apple-touch-icon" sizes="144x144" href="assets/img/favicons/favicon-144x144.png">
        <link rel="apple-touch-icon" sizes="152x152" href="assets/img/favicons/favicon-152x152.png">
        <link rel="apple-touch-icon" sizes="180x180" href="assets/img/favicons/favicon-180x180.png">
        
        {# Font Awesome icons #}
        <script src="https://kit.fontawesome.com/8be7adf8bc.js" crossorigin="anonymous"></script>
        
        <link rel="stylesheet" type="text/css" href="/assets/css/style.css" />

        <meta name="generator" content="{{ eleventy.generator }}">
    </head>
    <body>
        <a href="#skip" class="visually-hidden">Skip to main content</a>

        <header class="main">
            <img src="{{ podcast.smallImage }}" alt="Breadcrumbs artwork"/>
            <section class="site-title"><a href="/" class="home-link">{{ podcast.title }}</a></section>
            <ul class="nav">
                <li><a href="/" class="home-link">Home</a></li>
                <li><a href="/about/">About</a></li>
                <li><a href="/archive/">Archive</a></li>
                <li><a href="/feed.xml">RSS</a></li>
            </ul>
        </header>
        <main id="skip" class="content" role="main">
            {{ content | safe }}
        </main>
    	<footer class="main">
        	<section class="copyright">&copy; 2016â€“2021 Elias Lanz & Sean Lunsford</section>
    	</footer>
    </body>
</html>
