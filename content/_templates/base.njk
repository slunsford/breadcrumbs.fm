{%- set pageTitle %}
    {%- if titleWithEpisode -%}
        {{ podcast.title }} {{ titleWithEpisode }}
    {%- elseif title -%}
        {{ title }} | {{ podcast.title }}
    {%- else -%}
        {{ podcast.title }}
    {%- endif -%}
{% endset -%}

{%- set pageDescription %}{{ summary or podcast.description }}{% endset -%}

<!doctype html>
<html lang="{{ podcast.language }}">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ pageTitle }}</title>
        <meta name="description" content="{{ pageDescription }}">
        
        <meta property="og:title" content="{{ pageTitle }}" />
        <meta property="og:description" content="{{ pageDescription }}" />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="{{ podcast.url }}" />
        <meta property="og:image" content="{{ podcast.image }}">


        <link rel="alternate" href="/feed.xml" type="application/rss+xml" title="{{ podcast.title }} Feed">
        
        <link rel="shortcut icon" href="assets/img/favicons/favicon.ico" />
        <link rel="icon" type="image/x-icon" sizes="16x16 32x32" href="assets/img/favicons/favicon.ico">
        <link rel="apple-touch-icon" sizes="57x57" href="assets/img/favicons/favicon-57x57.png">
        <link rel="apple-touch-icon" sizes="72x72" href="assets/img/favicons/favicon-72x72.png">
        <link rel="apple-touch-icon" sizes="114x114" href="assets/img/favicons/favicon-114x114.png">
        <link rel="apple-touch-icon" sizes="120x120" href="assets/img/favicons/favicon-120x120.png">
        <link rel="apple-touch-icon" sizes="144x144" href="assets/img/favicons/favicon-144x144.png">
        <link rel="apple-touch-icon" sizes="152x152" href="assets/img/favicons/favicon-152x152.png">
        <link rel="apple-touch-icon" sizes="180x180" href="assets/img/favicons/favicon-180x180.png">
                
        <link rel="stylesheet" type="text/css" href="/assets/css/style.css" />
        <style>
        {% include "includes/podcast-apps-styles.njk" %}
        </style>

        <meta name="generator" content="{{ eleventy.generator }}">
    </head>
    <body>
        <a href="#skip" class="visually-hidden">Skip to main content</a>

        <header class="main">
            <section class="content">
                <a href="/" class="home-link">
                    <img src="/assets/img/pretzel.png" class="cover" alt="Breadcrumbs pretzel"/>
                </a>
                <section class="title-nav-container">
                    <section class="site-title"><a href="/" class="home-link">{{ podcast.title }}</a></section>
                    {% include "includes/podcast-apps.njk" %}
                    {% include "includes/navigation.njk" %}
                </section>
            </section>
        </header>
        <main id="skip" role="main">
            <section class="content">
                {{ content | safe }}
            </section>
        </main>
        <footer class="main">
            <section class="content">
                <span class="copyright">&copy; 2016â€“2021 Elias Lanz & Sean Lunsford</span>
            </section>
        </footer>
    </body>
</html>
